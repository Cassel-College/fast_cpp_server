set(WITH_TLS OFF)
add_subdirectory(external/libzmq EXCLUDE_FROM_ALL)
message(STATUS "添加 libzmq 包含路径到 THIRD_PARTY_INCLUDES")
message(STATUS "libzmq include path: ${CMAKE_SOURCE_DIR}/external/libzmq/include")

if (NOT EXISTS "${CMAKE_SOURCE_DIR}/external/libzmq/include")
    message(FATAL_ERROR "libzmq include path not found: ${CMAKE_SOURCE_DIR}/external/libzmq/include")
else()
    print_colored_message("<include> Found libzmq include" COLOR green)
    list(APPEND THIRD_INCLUDE_DIRECTORIES ${CMAKE_SOURCE_DIR}/external/libzmq/include)
endif()
list(APPEND THIRD_PARTY_INCLUDES ${CMAKE_SOURCE_DIR}/external/libzmq/include)